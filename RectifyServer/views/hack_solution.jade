extends layout

block body
    body
        if (typeof(meta_data) !== undefined && meta_data != null)
            if (typeof (meta_data.opponent_code) !== undefined && meta_data.opponent_code != null && meta_data.phase == "HACKING_PHASE")
                <div class="container">
                <div class="row" style="white-space: pre-wrap;">
                p.header.col.s12.light #{meta_data.opponent_code}
                </div>

                style(type='text/css').
                    pre {
                        height: 400px;
                        width: 100%;
                    }

                <form action="" method="POST" id="problem_submit_form">
                <h5 class="col s12 light"> Give Input here (Hack) : </h5>
                pre#editor

                <input type="hidden" name="code" id="code" value="Invalid Code !!"/>
                <div class="s12 m12 l12 center">
                <button id="code_submit" class="btn waves-effect waves-purple blue lighten-5 blue-text btn-large hoverable center">Submit Custom Test Case <i class="material-icons right">send</i></button>
                </div>
                </form>
                <script src="javascripts/src-min-noconflict/ace.js" type="text/javascript" charset="utf-8"></script>
                <script src="javascripts/ace-editor.js" type="text/javascript" charset="utf-8"></script>

                </div>
                <br>
                <br>
            else
                h5.header.col.s12.light You cannot hack any more challenges.
        else
            <h3>Meta data undefined.</h3>