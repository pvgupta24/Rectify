extends layout
block body
    <div class="container">
    <div class="row" >
    <form class="col s12" action="/login" method="post">
    <div class="col s12">
    <div class="col s4"></div>
    h2.header.center.orange-text Login
    <div class="col s4"></div>
    </div>

    <div class="row">
    <div class="input-field col s12 center-block">
    <input name="user_id" id="user_id" type="text" class="validate" required>
    <label for="user_id">UserId</label>
    </div>
    </div>

    <div class="row">
    <div class="input-field col s12">
    <input name="password" id="password" type="password" class="validate" required>
    <label for="password">Password</label>
    </div>
    </div>

    <div class="col s12">
    <div class="col s4"></div>
    <button class="btn waves-effect waves-light btn col s4" type="submit">Login</button>
    <div class="col s4"></div>
    </div>
    </form>
    if (meta_data.err_message !== undefined && meta_data.err_message != null)
        h3 #{meta_data.err_message}
    </div>
    </div>
